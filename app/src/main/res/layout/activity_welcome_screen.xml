<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/wpage"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="179dp"
        android:layout_height="147dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/appicon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_echoplex"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_2nd_line"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="473dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_3rd_line"
        android:textColor="@color/black"
        android:layout_marginVertical="4dp"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="513dp" />

    <Button
        android:id="@+id/getStarted"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="-32dp"
        android:backgroundTint="#3D4C51"
        android:text="@string/btnString1"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        android:elevation="10dp"
        android:stateListAnimator="@null"/>



</LinearLayout>